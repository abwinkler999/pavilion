<div class="parentblock">
	<% unless current_user.adult %>
		<h3>(You have registered no adults for Greater Than Rubies Summer Camp 2016.)</h3>
		<%= link_to "Register An Adult to Attend", new_adult_path, class: "btn btn-success" %>
	<% else %>
		<% the_adult = current_user.adult %>
		<h3>You are Attending Greater Than Rubies Summer Camp 2016!</h3>
		<div id="attendeeinfo" class="well">
			<h3><%=	"#{the_adult.first_name} #{the_adult.last_name}" %></h3>
			<%= "Troop: #{the_adult.troopnumber}" %><br />
			<%= "(Troop Contact: #{the_adult.troopcontact})" %><br />
			<%= "Phone: #{the_adult.phone}" %><br />
			<%= "Mailing address: #{the_adult.address}" %><br />
			<%= "Dietary restrictions: #{the_adult.dietary}" %><br />
			<%= "Gluten intolerance?  #{the_adult.no_gluten? ? "Y" : "N"}" %><br />
			<%= "Staying half the week?  #{the_adult.halfweek? ? "Y" : "N"}" %><br />
			<%= "CPR trained?  #{the_adult.cpr? ? "Y" : "N"}" %><br />
			<%= "First aid trained?  #{the_adult.cpr? ? "Y" : "N"}" %><br />
		<%= "T-shirt Size: #{the_adult.tshirt.nil? ? '?' : the_adult.tshirt.name}" %><br />
		</div>
		<p>
		<%= link_to "Edit Adult Registration", edit_adult_path(the_adult), class: "btn btn-primary" %>
		<%= link_to "Cancel Adult Registration", adult_path(the_adult), method: :delete, data: { confirm: "Are you certain you want to cancel your registration?" }, class: "btn btn-danger" %>
		</p>
	<% end %>
</div>
