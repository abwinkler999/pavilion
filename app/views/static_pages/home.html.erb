<div class="row main_banner">
<h1 class="main_banner_text">American Heritage Girls</h1>
</div>
<div class="row login_row">
	<div class="col-md-12">
	<div class="login_signup">
	<% if user_signed_in? %>
	<h4><%= link_to "Logout", destroy_user_session_path, :method => :delete %> </h4>
	<% else %>
		<h4><%= link_to "Login", new_user_session_path %></h4>
		<H4><%= link_to "Sign Up!", new_user_registration_path %></h4>
	<% end %>
	</div>
	</div>
</div>
<div class="row well">
<h2 class="big_text">Residence Camp 2015 Registration Application</h2>
</div>
<% if user_signed_in? %>
<div class="row">
	<div class="col-md-5">
	<div class="parentblock">
		<h2><%=	"#{current_user.first_name} #{current_user.last_name}" %></h2>
		<h3><%= "Troop: #{current_user.troop_number}" %></h3>
		<h3><%= "Phone: #{current_user.phone}" %></h3>
		<h3><%= "CPR trained?  #{current_user.cpr? ? "Y" : ""}" %>
		<h3><%= "First aid trained?  #{current_user.cpr? ? "Y" : ""}" %>
	</div>
	</div>
	<div class="col-md-4">
		<div class="girlblock">
		<% if current_user.girls.any? %>
			<h2><%=	"#{current_user.girls.first.first_name} #{current_user.girls.first.last_name}" %></h2>
			<h3><%= "DOB: #{current_user.girls.first.dob.to_s}" %></h3>
			<h3 id="levelblock"><%= "Level: #{current_user.girls.first.level.name}" %></h3>
			<h3><%= "Dietary restrictions: #{current_user.girls.first.dietary}" %></h3>
			<h3><%= "Gluten allergy?   #{current_user.girls.first.no_gluten? ? "Y" : ""}"%>
			<h3>Schedule:</h3>
			<div class="form-group">
				<% Slot.all.each { |x| %>
		 			<label for="sel1"><%= x.name %></label>
		  			<select class="form-control" id="sel1">
		  			<% Session.all.each { |y| %>
		  				<% if y.slot.id == x.id %>
			   				<option><%= y.name %></option>
			   			<% end %>
			   		<% } %>
		  			</select>
	  			<% } %>
			</div>

		<% end %>
		</div>
	</div>
</div>
<% else %>
<div id="please_sign_in">
	<h3><span class="glyphicon glyphicon-hand-right"></span>   Please create an account to sign up for Residence Camp and to select your daughter's sessions.</h3>
</div>
<% end %>