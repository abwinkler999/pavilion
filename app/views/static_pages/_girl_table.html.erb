<table class="table table-striped table-bordered">
<tr>
	<% ["Girl", "Level", "DOB", "Grade This Fall", "Parent's Cell", "Other Cell", "Dietary Restrictions",
		"Gluten Restriction", "Medications", "T-Shirt Size", "Schedule", "Pi/Pa High Ropes"].each { |caption| %>
	<th><%= caption.to_s %>
	<% } %>
</tr>
<% if admin_display %>
	<% collection_to_display = Girl.all %>
<% else %>
	<% collection_to_display = current_user.girls %>
<% end %>
<% collection_to_display.each { |x| %>
<tr>
	<td>
		<%= "#{x.first_name} #{x.last_name}" %>
	</td>
	<td>
		<%= "#{x.level.name}" %>
	</td>
	<td>
		<%= "#{x.dob}" %>
	</td>
	<td>
		<%= "#{x.fallgrade}" %>
	</td>
	<td>
		<%= "#{x.parentcell}" %>
	</td>
	<td>
		<%= "#{x.othercell}" %>
	</td>
	<td>
		<%= "#{x.dietary}" %>
	</td>
	<td>
		<%= "#{x.no_gluten ? "Yes" : "No"}" %>
	</td>
	<td>
		<%= "#{x.medications ? "Yes" : "No"}" %>
	</td>
	<td>
		<%= "#{x.tshirt.nil? ? '?' : x.tshirt.name}"%>
	</td>
	<td>
		<% if x.level == Level.find_by(name:"Tenderheart") %>
			<strong>Tenderheart Activities</strong>
		<% else %>
			<%= "A: "%><strong><%= "#{x.session_A.nil? ? 'No choice' : x.session_A.name}" %></strong><br />
			<% if !x.session_B.nil? && x.session_B.name == "Outdoor Skills/Backpacking" %>
			<%= "B and C:" %>
			<% else %>
			<%= "B:" %>
			<% end %>
			<strong><%= "#{x.session_B.nil? ? 'No choice' : x.session_B.name}" %></strong><br />
			<% unless x.session_C.nil? %>
			<%= "C: "%><strong><%= "#{x.session_C.nil? ? 'No choice' : x.session_C.name}" %></strong><br />
			<% end %>
			<%= "D: "%><strong><%= "#{x.session_D.nil? ? 'No choice' : x.session_D.name}" %></strong><br />
			<% unless x.cooking_session == "None" %>
				<strong><%= "Friday Outdoor Cooking: #{x.cooking_session}" %></strong><br/>
			<% end %>
		<% end %>
	</td>
	<td>
		<%= "#{x.high_ropes ? "Yes" : "No"}" %>
	</td>
	<% if !admin_display %>
		<td>
		<h4><%= link_to "Edit", edit_girl_path(x), class: "btn btn-primary" %></h4>
	</td>
	<td>
		<h4><%= link_to "Cancel Registration", girl_path(x), method: :delete, data: { confirm: "Are you certain you want to delete this girl?" }, class: "btn btn-danger" %></h4>
	<% end %>
	</td>
</tr>
<% } %>
</table>