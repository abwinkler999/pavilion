<table class="table table-striped table-bordered tiny-text">
<tr>
	<% ["Girl", "Level", "DOB", "Grade This Fall", "Parent's Cell", "Other Cell", "Dietary Restrictions",
		"Gluten Restriction", "Medications", "T-Shirt Size", "Schedule", "Pi/Pa High Ropes"].each { |caption| %>
	<th><%= caption.to_s %>
	<% } %>
</tr>
<% Girl.all.each { |x| %>
<tr>
	<td>
		<%= "#{x.first_name} #{x.last_name}" %>
	</td>
	<td>
		<%= "#{x.level.name}" %>
	</td>
	<td>
		<%= "#{x.dob}" %>
	</td>
	<td>
		<%= "#{x.fallgrade}" %>
	</td>
	<td>
		<%= "#{x.parentcell}" %>
	</td>
	<td>
		<%= "#{x.othercell}" %>
	</td>
	<td>
		<%= "#{x.dietary}" %>
	</td>
	<td>
		<%= "#{x.no_gluten ? "Yes" : "No"}" %>
	</td>
	<td>
		<%= "#{x.medications ? "Yes" : "No"}" %>
	</td>
	<td>
		<%= "#{x.tshirt.nil? ? '?' : x.tshirt.name}"%>
	</td>
	<td>
		<% if x.level == Level.find_by(name:"Tenderheart") %>
		Tenderheart Activities
		<% else %>
		<ul>
			<li><%= "A: #{x.session_A.nil? ? 'No choice' : x.session_A.name}" %></li>
			<li><%= "B: #{x.session_B.nil? ? 'No choice' : x.session_B.name}" %></li>
			<li><%= "C: #{x.session_C.nil? ? 'No choice' : x.session_C.name}" %></li>
			<li><%= "D: #{x.session_D.nil? ? 'No choice' : x.session_D.name}" %></li>
			<% unless x.cooking_session == "None" %>
				<li><%= "Friday Outdoor Cooking: #{x.cooking_session}" %></li>
			<% end %>
		</ul>
		<% end %>
	</td>
	<td>
		<%= "#{x.high_ropes ? "Yes" : "No"}" %>
	</td>
</tr>
<% } %>
</table>