<div id="girls_list_block">
<h2>Girls attending Camp Marengo 2015</h2>
<table class="table table-striped table-bordered">
<tr>
	<th>Girl</th>
	<th>Level</th>
	<th>DOB</th>
	<th>Grade This Fall</th>
	<th>Parent's Cell</th>
	<th>Other Cell</th>
	<th>Dietary Restrictions</th>
	<th>Gluten Restriction</th>
	<th>Medications</th>
	<th>T-Shirt Size</th>
	<th>Schedule</th>
	<th>Pi/Pa High Ropes</th>
</tr>
<% current_user.girls.each { |x| %>
<tr>
	<td>
		<%= "#{x.first_name} #{x.last_name}" %>
	</td>
	<td>
		<%= "#{x.level.name}" %>
	</td>
	<td>
		<%= "#{x.dob}" %>
	</td>
	<td>
		<%= "#{x.fallgrade}" %>
	</td>
	<td>
		<%= "#{x.parentcell}" %>
	</td>
	<td>
		<%= "#{x.othercell}" %>
	</td>
	<td>
		<%= "#{x.dietary}" %>
	</td>
	<td>
		<%= "#{x.no_gluten ? "Yes" : "No"}" %>
	</td>
	<td>
		<%= "#{x.medications ? "Yes" : "No"}" %>
	</td>
	<td>
		<%= "#{x.tshirt.nil? ? '?' : x.tshirt.name}"%>
	</td>
	<td>
		<% if x.level == Level.find_by(name:"Tenderheart") %>
		Tenderheart Activities
		<% else %>
		<ul>
			<li><%= "A: #{x.session_A.nil? ? 'No choice' : x.session_A.name}" %></li>
			<li><%= "B: #{x.session_B.nil? ? 'No choice' : x.session_B.name}" %></li>
			<li><%= "C: #{x.session_C.nil? ? 'No choice' : x.session_C.name}" %></li>
			<li><%= "D: #{x.session_D.nil? ? 'No choice' : x.session_D.name}" %></li>
			<% unless x.cooking_session == "None" %>
				<li><%= "Friday Outdoor Cooking: #{x.cooking_session}" %></li>
			<% end %>
		</ul>
		<% end %>
	</td>
	<td>
		<%= "#{x.high_ropes ? "Yes" : "No"}" %>
	</td>
	<td>
		<h4><%= link_to "Edit", edit_girl_path(x), class: "btn btn-primary" %></h4>
	</td>
	<td>
		<h4><%= link_to "Cancel Registration", girl_path(x), method: :delete, data: { confirm: "Are you certain you want to delete this girl?" }, class: "btn btn-danger" %></h4>
	</td>
</tr>
<% } %>
</table>
<%= link_to "Register Another Girl", new_girl_path, class: "btn btn-success" %>
</div>