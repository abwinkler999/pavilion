<div class="girlform">
	<h3>Register a Girl</h3>
	<% if @girl.errors.any? %>
	<h3>Errors:</h3>
	<ul>
	<% @girl.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
	<% end %>
	<div class="row">
		<div class="col-md-7 col-md-offset-1">
			<%= form_for @girl do |g| %>
				<%= g.label :first_name %>:
				<%= g.text_field :first_name %>
				<%= g.label :last_name %>:
				<%= g.text_field :last_name %><br>
				<%= g.label "Troop Number" %><br />
				<%= g.text_field :troopnumber %><br>
				<%= g.label "Date of Birth (MM-DD-YYYY)" %><br />
				<%= g.date_field :dob %><br>
				<%= g.label "What school grade will girl be in fall?" %><br />
				<%= g.text_field :fallgrade %><br>
				<%= g.label "Please list any dietary restrictions:" %><br />
				<%= g.text_field :dietary %><br>
				<%= g.label "Gluten sensitivity?" %><br>
				<%= g.check_box :no_gluten %><br>
				<%= g.label "Will girl be checking in medications with nurse on arrival?" %><br>
				<%= g.check_box :medications %><br>
				<%= g.label "Parent's Phone Number" %><br />
				<%= g.text_field :parentcell %><br>
				<%= g.label "Alternate Phone Number" %><br />
				<%= g.text_field :othercell %><br>
				<%= g.label "Level" %>
				<%= select_tag(:level_id, options_from_collection_for_select(Level.all, :id, :name)) %>
				<%= g.label "T-Shirt Size" %>
				<%= select_tag(:tshirt_id, options_from_collection_for_select(Tshirt.all, :id, :name)) %>
				<%= g.label "Session A (Morning):" %>
				<%= select_tag(:session_A_id, options_from_collection_for_select(Session.where(slot:Slot.find_by(name:"A")), :id, :name)) %>
				<%= g.label "Session B (Morning):" %>
				<%= select_tag(:session_B_id, options_from_collection_for_select(Session.where(slot:Slot.find_by(name:"B")), :id, :name)) %>
				<%= g.label "Session C (Morning):" %>
				<%= select_tag(:session_C_id, options_from_collection_for_select(Session.where(slot:Slot.find_by(name:"C")), :id, :name)) %>
				<%= g.label "Session D (Afternoon):" %>
				<%= select_tag(:session_D_id, options_from_collection_for_select(Session.where(slot:Slot.find_by(name:"D")), :id, :name)) %>
				<p class="disclaimer">Please note that all Outdoor Cooking sessions require the scout to have already earned the Fire Safety merit badge.</p>
				<%= g.label "Is this scout participating in the High Ropes course (Explorers only)?", class:"text-capitalize" %><br>
				<%= g.check_box :high_ropes %><br>
				<p class="disclaimer">An additional registration fee will apply for the High Ropes course.</p>
				<%= g.submit "Register Girl", class: "btn btn_default btn_success" %>

		</div>
		<div class="col-md-4">
			<h2>SESSIONS SIGNUP</h2>
				<p>

				</p>
				<%= link_to "Cancel", :root, class: "btn btn_primary" %>
			<% end %>
		</div>
	</div>
</div>